{
	"extends": "@de100/tsconfig/base.json",
	"compilerOptions": {
		"lib": ["ES2022", "dom", "dom.iterable"],
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": { "#*": ["./src/*"] },
		"plugins": [{ "name": "next" }],
		"module": "esnext",
		"allowImportingTsExtensions": true
	},
	"include": [
		"./.next/types/**/*.ts",
		"./next-env.d.ts",
		"./src/**/*",
		".next/types/**/*.ts",
		"./src/i18n/def.d.ts"
	],
	"exclude": ["node_modules"]
}
