{
	"name": "@de100/auth-shared",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"imports": {
		"#*": "./src/*"
	},
	"exports": {
		"./constants": {
			"types": "./dist/src/constants.d.ts",
			"default": "./src/constants.js"
		},
		"./validations": {
			"types": "./dist/src/validations.d.ts",
			"default": "./src/validations.js"
		},
		"./types": {
			"types": "./dist/src/types.d.ts",
			"default": "./src/types.js"
		}
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"dev": "tsc",
		"clean": "rm -rf .turbo .cache .turbo dist node_modules",
		"format:fix": "biome format ./src --write",
		"format:check": "biome format ./src",
		"lint": "dotenv -v SKIP_ENV_VALIDATION=1 biome lint ./src",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false"
	},
	"dependencies": {
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@de100/biome-config": "workspace:*",
		"@de100/tsconfig": "workspace:*",
		"typescript": "catalog:"
	}
}
