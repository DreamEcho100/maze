{
	"name": "@de100/form-manager-core",
	"version": "0.0.13",
	"description": "A form state management for fields validations and errors",
	"keywords": [
		"form",
		"manage"
	],
	"license": "MIT",
	"readme": "./README.md",
	"sideEffects": false,
	"main": "./src/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"./constants": {
			"types": "./dist/constants.d.ts",
			"default": "./src/constants.js",
			"import": "./src/constants.js",
			"require": "./src/constants.js"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"default": "./src/types.ts",
			"import": "./src/types.ts",
			"require": "./src/types.ts"
		},
		"./fields/errors/types": {
			"types": "./dist/fields/errors/types.d.ts",
			"default": "./src/fields/errors/types.ts",
			"import": "./src/fields/errors/types.ts",
			"require": "./src/fields/errors/types.ts"
		},
		"./fields/shape/types": {
			"types": "./dist/fields/shape/types.d.ts",
			"default": "./src/fields/shape/types.ts",
			"import": "./src/fields/shape/types.ts",
			"require": "./src/fields/shape/types.ts"
		},
		"./resolver-builder": {
			"types": "./dist/resolver-builder/index.d.ts",
			"default": "./src/resolver-builder/index.ts",
			"import": "./src/resolver-builder/index.ts",
			"require": "./src/resolver-builder/index.ts"
		},
		"./resolver-builder/types": {
			"types": "./dist/resolver-builder/types.d.ts",
			"default": "./src/resolver-builder/types.ts",
			"import": "./src/resolver-builder/types.ts",
			"require": "./src/resolver-builder/types.ts"
		},
		"./shared/types": {
			"types": "./dist/shared/types.d.ts",
			"default": "./src/shared/types.ts",
			"import": "./src/shared/types.ts",
			"require": "./src/shared/types.ts"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@de100/biome-config": "workspace:*",
		"@de100/tsconfig": "workspace:*",
		"@standard-schema/spec": "catalog:",
		"tsup": "catalog:",
		"typescript": "catalog:"
	},
	"scripts": {
		"old:build": "cross-env NODE_ENV=production tsup",
		"old:dev": "pnpm run build -- --watch",
		"old:2:build": "tsup src --format cjs,esm --dts",
		"build": "tsc",
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"dev": "tsc",
		"format:fix": "biome format ./src --write",
		"format:check": "biome format ./src"
	}
}
